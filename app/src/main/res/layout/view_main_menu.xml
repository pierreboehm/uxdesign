<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/menueButtonContainer"
        android:orientation="vertical">

        <org.pb.android.uxdesign.ui.view.DotPatternBigView_
            android:id="@+id/dotPatternBigView"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            android:textColor="@color/white"
            android:text="SYSTEMS RUNNING OPTIMAL"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_deep_sky"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5sp"
                android:textColor="@color/white"
                android:text="POWER SYSTEM * CPU PROCESSING * TEMP SYSTEM"
                />

            <org.pb.android.uxdesign.ui.view.DotPatternSmallView_
                android:id="@+id/dotPatternSmallView"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/menueButtonContainer"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/menueAccessSystemView"
            android:layout_above="@id/menueAccessSystemView"
            android:paddingLeft="35dp"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:text="ACCESS SYSTEMS"
            />

        <org.pb.android.uxdesign.ui.button.MenueAccessSystemView_
            android:id="@+id/menueAccessSystemView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menueButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center">

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PASSENGER INFO"
            />

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="UNIT INFO"
            />

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MAINTENANCE"
            />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:background="@drawable/iv_hexagon_transparent_blue_light">

    <ProgressBar
        android:id="@+id/progressBarProgressValue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_determinative"
        android:progress="25"
        android:max="100"
        />

    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSubTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:textStyle="bold"
            tools:text="OÂ²"
            />

        <TextView
            android:id="@+id/tvTextProgressValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_deep_sky"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="25%"
            />

        <TextView
            android:id="@+id/tvSubTextBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_light"
            android:textSize="6sp"
            tools:text="normal"
            />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_above="@id/menueButtonContainer"
        android:orientation="vertical">

        <org.pb.android.uxdesign.ui.view.ProcessingConsoleView_
            android:id="@+id/processingConsoleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menueButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center">

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PASSENGER INFO"
            />

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="UNIT INFO"
            />

        <org.pb.android.uxdesign.ui.button.MenueButtonView_
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MAINTENANCE"
            />

    </LinearLayout>

</RelativeLayout>
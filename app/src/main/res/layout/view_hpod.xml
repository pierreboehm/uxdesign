<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.pb.android.uxdesign.ui.view.HeaderViewTop_
            android:id="@+id/header_view_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:id="@+id/squareList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.pb.android.uxdesign.ui.view.SquareView_
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                />

            <org.pb.android.uxdesign.ui.view.SquareView_
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                />

            <org.pb.android.uxdesign.ui.view.SquareView_
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <org.pb.android.uxdesign.ui.view.HeaderViewBottom_
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue_deep_sky"
            android:layout_alignParentTop="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue_deep_sky"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:background="@drawable/rect_shape_rounded"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:textColor="@color/blue_cyan"
            android:text="POWER SYSTEM"
            />

        <org.pb.android.uxdesign.ui.view.DotPatternSmallView_
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_deep_sky"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:textColor="@color/blue_cyan"
            android:text="CPU PROCESSES"
            />

        <org.pb.android.uxdesign.ui.view.DotPatternSmallView_
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_deep_sky"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:textColor="@color/blue_cyan"
            android:text="TEMP SYSTEM"
            />

        <org.pb.android.uxdesign.ui.view.DotPatternSmallView_
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_deep_sky"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/blue_cyan"
                android:text="O²"
                />

            <org.pb.android.uxdesign.ui.button.SensorStateButton_
                android:layout_width="12dp"
                android:layout_height="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/blue_cyan"
                android:text="CO²"
                />

            <org.pb.android.uxdesign.ui.button.SensorStateButton_
                android:layout_width="12dp"
                android:layout_height="12dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
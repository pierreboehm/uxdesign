<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/userDataBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blue_light"
            android:textAllCaps="true"
            tools:text="James Preston"
            />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue_light"
            android:textAllCaps="true"
            tools:text="Denver, Colorado"
            />

        <TextView
            android:id="@+id/tvProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue_light"
            android:textAllCaps="true"
            tools:text="Rate 2 Mechanical engineer"
            />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textScaleX="1.2"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:text="@string/vitalState_discharged"
            />

        <LinearLayout
            android:id="@+id/idBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/blue_light"
                android:text="ID CODE:"
                />

            <TextView
                android:id="@+id/tvIdCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_light"
                tools:text="0352.0027"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/modeBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="11dp"
                android:layout_height="16dp"
                android:src="@drawable/iv_open_hexagon_with_dot"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="HPOD SYSTEM"
                    />

                <TextView
                    android:id="@+id/tvSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:text="PASSENGER VITAL STATUS"
                    android:visibility="visible"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/homestead_logo"
            android:layout_marginRight="10dp"
            app:tint="@color/blue_light"
            />

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textScaleX="1.4"
            android:textColor="@color/blue_light"
            android:text="HOMESTEAD "
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</RelativeLayout>